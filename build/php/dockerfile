ARG  PHP_FPM_VERSION
FROM php:${PHP_FPM_VERSION}-fpm
ENV  COMPOSER_ALLOW_SUPERUSER 1

RUN curl -fsSL https://getcomposer.org/installer | php \
    && mv composer.phar /usr/local/bin/composer \
    && chmod +x /usr/local/bin/composer \
    && composer config -g repo.packagist composer https://mirrors.aliyun.com/composer/ \
    ############################
    #安装PHP工具composer
    ############################
    && curl -fsSL http://phar.phpunit.cn/phpunit.phar -o phpunit \
    && mv phpunit /usr/local/bin/phpunit \
    && chmod +x /usr/local/bin/phpunit \
    ############################
    #安装PHP依赖
    ############################
    && sed -i "s/archive.ubuntu.com/mirrors.aliyun.com/g" /etc/apt/sources.list \
    && sed -i "s/deb.debian.org/mirrors.aliyun.com/g" /etc/apt/sources.list \
    && apt-get update \
    && apt-get install -y libfreetype6-dev libjpeg62-turbo-dev libpng-dev libpq-dev libbz2-dev libgmp-dev \
    librabbitmq-dev zip unzip libtidy-dev librecode-dev libpspell-dev libenchant-dev libxml2-dev libxslt-dev \
    ############################
    #安装PHP扩展
    ############################
    && docker-php-ext-install tidy \
    && docker-php-ext-install recode \
    && docker-php-ext-install pspell \
    && docker-php-ext-install opcache \
    && docker-php-ext-install enchant \
    && docker-php-ext-install dba \
    && docker-php-ext-install bz2 \
    && docker-php-ext-install wddx \
    && docker-php-ext-install sysvmsg \
    && docker-php-ext-install sysvshm \
    && docker-php-ext-install pcntl \
    && docker-php-ext-install gmp \
    && docker-php-ext-install exif \
    && docker-php-ext-install calendar \
    && docker-php-ext-install xsl \
    && docker-php-ext-install sockets \
    && docker-php-ext-install sysvsem \
    && docker-php-ext-install mysqli \
    && docker-php-ext-install pdo_mysql \
    && docker-php-ext-install soap \
    && docker-php-ext-install opcache \
    && docker-php-ext-install gettext \
    && docker-php-ext-install shmop \
    && docker-php-ext-install opcache \
    && docker-php-ext-install bcmath \
    && docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ \
    && docker-php-ext-install -j$(nproc) gd \
    && pecl channel-update pecl.php.net \ 
    && pecl install swoole \
    && pecl install redis \
    && pecl install apcu \
    && pecl install xdebug \
    && pecl install amqp \
    && pecl install mongodb \
    && docker-php-ext-enable redis xdebug amqp mongodb apcu swoole \